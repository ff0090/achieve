<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
        <h2>この内容で送信する</h2>

<%= form_for(@contact) do |f| %>
  <!-- `f.hidden_field`を使用して、リクエストパラメータに値を設定できるようにしています。 -->
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :content %>
  <!-- @contact.titleと@contact.contentとすることで、表示用の値を画面に出力しています。 -->
  <p>タイトル:<%= @contact.name %></p>
  <p>本文:<%= @contact.email %></p>
  <p>本文:<%= @contact.content %></p>
  <br>
  <%= f.submit '送信', class: 'btn btn-primary btn-block' %>
<% end %>

<%= form_for(@contact, url: new_contact_path) do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :content %>
   <%= f.submit 'もどる', name: 'back', class: 'btn btn-primary btn-block' %>
<% end %>

  </div>
</div>